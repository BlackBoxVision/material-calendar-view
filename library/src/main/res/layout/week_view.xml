<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/week_view"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:layout_marginTop="42dp"
    android:layout_weight="7">

    <TextView android:id="@+id/first"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="@dimen/week_view_font_size"
        android:gravity="center|center_vertical|center_horizontal"
        android:tag="1"
        tools:text="Lun"/>

    <TextView android:id="@+id/second"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="@dimen/week_view_font_size"
        android:gravity="center|center_vertical|center_horizontal"
        android:tag="2"
        tools:text="Mar"/>

    <TextView android:id="@+id/third"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="@dimen/week_view_font_size"
        android:gravity="center|center_vertical|center_horizontal"
        android:tag="3"
        tools:text="Mie"/>

    <TextView android:id="@+id/fourth"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="@dimen/week_view_font_size"
        android:gravity="center|center_vertical|center_horizontal"
        android:tag="4"
        tools:text="Jue"/>

    <TextView android:id="@+id/fifth"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="@dimen/week_view_font_size"
        android:gravity="center|center_vertical|center_horizontal"
        android:tag="5"
        tools:text="Vie"/>

    <TextView android:id="@+id/sixth"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="@dimen/week_view_font_size"
        android:gravity="center|center_vertical|center_horizontal"
        android:tag="6"
        tools:text="Sab"/>

    <TextView android:id="@+id/seventh"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="@dimen/week_view_font_size"
        android:gravity="center|center_vertical|center_horizontal"
        android:tag="7"
        tools:text="Dom"/>

</LinearLayout>